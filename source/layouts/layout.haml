%html{lang: "en"}
  = partial "/layouts/head.haml"
%body{screen_capture_injected: "true"}
  .container{role: "main"}

    .navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"}
            = patient_group
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{href: "/research"} Research Topics
            %li
              %a{href: "/data"} My Health Data
            %li
              %a{href: "/social"} People

          %ul.nav.navbar-nav.pull-right
            %li
              %a{href: "/contributions"}
                800
                %i.fa.fa-star

            %li
              %a{href: "/account"}
                %i.fa.fa-gear

    // Page Header
    .row
      .col-xs-12
        - if current_page.data.hide_page_header
          .page-header-custom-blank
        - else
          .page-header
            %h1
              = current_page.data.title || current_page.data.page_title
              %small= current_page.data.page_subtitle

    = yield
    %br/
    %br/
    %br/
    = partial "/layouts/foot.haml"